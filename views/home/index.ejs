<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="https://i.ibb.co/5kX6vJr/tehei-icon.jpg" alt="tehei-icon">
    <link rel='stylesheet' href='/css/home.css' />
    <title> Home</title>

</head>

<body>
    <main id="bodyMain">
        <header>
            <!-- logo-->
            <!--    <li> <a href="/curriculo"> Meu curriculo</a> -->
            <% include ../header.ejs %>
        </header>

        <div class="container">
            
            <header class="topo">
                <h2>Sugestão Filmes</h2>
                <span>
                    <a href="" class="see-all">Ver+</a>
                </span>
            </header>
            <div class="items">
                        <% filmes.forEach(function(filme) { %>
                            <article class="movie"> 
                                <div class="poster">
                                  <!--   <img src=<%= filme.capa %> alt=<%= filme.nome %> > -->

                                    <a href="/sinopse/index/<%- filme._id %>?_method=PUT"> <img src=<%= filme.capa %> alt=<%= filme.nome %> > </a> 
                                </div>
                                <div class="data"> 
                                    <a href="/sinopse/index/<%= filme.id %>" class="link_data"><h3><%= filme.nome %></h3></a> 
                                </div>
                            </article>
                        <% }); %>
            </div>
            <header class="topo">
                    <h2>Sugestão Livros</h2>
                    <span>
                        <a href="" class="see-all">Ver+</a>
                    </span>
                </header>
                <div class="items">
                            <% livro.forEach(function(livro) { %>
                                <article class="movie"> 
                                    <div class="poster">
                                        <a href="/sinopse/index/<%- livro._id %>?_method=PUT"> <img src=<%= livro.capa %> alt=<%= livro.nome %> > </a> 
                                    </div>
                                    <div class="data"> 
                                        <a href="/sinopse/index/<%= livro.id %>" class="link_data"><h3><%= livro.nome %></h3></a> 
                                    </div>
                                </article>
                            <% }); %>
                </div>
        </div>
        
        <footer>
            <% include ../footer.ejs %>
        </footer>
    </main>

</body>

</html>